---
interface Props {
	title: string;
	body: string;
	img: string;
}

const { img, title, body } = Astro.props;
---

<li class="link-card">
		<h2>
			{title}
		</h2>
		<img src={img}>
		<p>
			{body}
		</p>
</li>
<style>
	.link-card{
		list-style: none;
		display: flex;
		flex-direction: column;
		text-align: center;
		background-color: #6a97ff;
		background-image: none;
		background-size: 1000%;
		border-radius: 8px;
		background-position: 100%;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
	}
	.link-card > img {
		height:210px;
	}
	h2 {
		margin: 0;
		font-size: 1.25rem;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
	}

</style>
